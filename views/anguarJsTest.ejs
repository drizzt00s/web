<!DOCTYPE HTML><html lang="zh-cn" ng-app="shoppingModule"><head><script src="/javascript/angular-1.0.1.min.js"></script>    <meta charset="UTF-8">    <title>scope-hierarchies</title>    <style type="text/css">         </style>	<script type="text/javascript">	   var shoppingModule=angular.module("shoppingModule",[]);	   shoppingModule.factory("Item",function(){	     var items={};		 items.query=function(){		   return [		     {title:"paint pots",description:"pots full of paint",price:3.95},		     {title:"Polka dots",description:"Dots with polka",price:2.95},			 {title:"pebbles",description:"just little rocks",price:6.95}		   ];		 };	     return items;	   });	  function shoppingController($scope,Item){	    $scope.items=Item.query();	  	  	  }			</script></head><body>  <div ng-controller="shoppingController">     <ul ng-repeat="item in items">	   <li>title:{{item.title}}<br />description:{{item.description}}<br/>price:{{item.price|currency}}</li>	 	 </ul>  </div></body></html>